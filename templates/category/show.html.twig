{% extends 'base.html.twig' %}

{% block title %}Category{% endblock %}

{% block body %}
<div class="container-fluid" >
    <h1>Category</h1>

    <table class="table">
        <tbody>
            <tr>
                <th>Id</th>
                <td>{{ category.id }}</td>
            </tr>
            <tr>
                <th>Nom</th>
                <td>{{ category.nom }}</td>
            </tr>
            <tr>
                <th>Description</th>
                <td>{{ category.description }}</td>
            </tr>
        </tbody>
    </table>

    <a href="{{ path('category_index') }}" class="btn btn-primary">back to list</a>

    <a href="{{ path('category_edit', {'id': category.id}) }}" class="btn btn-primary">edit</a>
    <br />
    {{ include('category/_delete_form.html.twig') }}
    </div>
{% endblock %}
